<div class="container">
  <%= form_with model: @shop, local: true do |f| %>
  <div class="row">
    <div class="input-field col s12">
      <%=f.label :'名前' %>
      <%= f.text_field :name %>
    </div>
    <div class="input-field col s12">
      <%= f.label :'ジャンル' %>
      <%= f.text_field :genre %>
    </div>
    <div class="input-field col s12">
      <%= f.label :'説明' %>
      <%= f.text_area :content ,class: "materialize-textarea"%>
    </div>
    <%= f.submit '投稿する' %>
  </div>
  <% end %>
  <%= link_to "一覧", shops_path %>
</div>